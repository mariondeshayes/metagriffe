---
import { PortableText } from "astro-portabletext";
const { node } = Astro.props;
---

<section class="my-32">
  <hr class="small-separator mb-8" />
  <h2
    class="mx-4 text-2xl sm:text-3xl md:text-6xl xl:text-7xl font-extrabold uppercase"
    set:html={node.h2}
  />
  <div class="list-border">
    {
      node.valeurs.map((valeur) => (
        <div class="my-16 flex flex-col md:flex-row gap-8">
          <h3 class="mx-4 w-full md:w-[40%] text-xl sm:text-3xl md:text-4xl xl:text-6xl mb-4 font-extrabold">
            {valeur.h3}
          </h3>
          <div class="mx-4 w-full md:w-[60%] max-w-prose text-lg md:text-xl xl:text-2xl">
            <PortableText value={valeur.text} />
          </div>
        </div>
      ))
    }
  </div>
</section>
