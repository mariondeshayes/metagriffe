---
import { PortableText } from "astro-portabletext";
const { node } = Astro.props;
---

<section class="w-full border-t-4 border-[var(--textColor)] -mt-1">
  {
    node.h2 && (
      <h2
        class="animate mt-16 text-3xl sm:text-4xl md:text-6xl xl:text-8xl font-extrabold uppercase w-fit mx-4 md:ml-auto md:mr-4 border-t-4 border-[var(--textColor)] pt-2"
        data-anim="fadeInRight"
        set:html={node.h2}
      />
    )
  }
  <div class="list-border mt-8 md:mt-32">
    {
      node.valeurs.map((valeur) => (
        <div class="my-16 flex flex-col md:flex-row gap-8">
          <h3
            data-anim="fadeInLeft"
            class="animate mx-4 md:w-[40%] text-xl sm:text-3xl md:text-4xl xl:text-6xl mb-4 font-extrabold">
            {valeur.h3}
          </h3>
          <div
            data-anim="fadeInRight"
            class="animate mx-4 md:w-[60%] max-w-prose text-lg md:text-xl xl:text-2xl">
            <PortableText value={valeur.text} />
          </div>
        </div>
      ))
    }
  </div>
</section>
