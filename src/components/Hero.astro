---
import Image from "./Image.astro";
import { PortableText } from "astro-portabletext";
const { node } = Astro.props;
---

<section
  class="flex flex-col md:flex-row justify-center items-center gap-4 m-4 md:mr-0">
  <div class="flex-0 w-full md:w-1/2 z-10">
    <h1
      set:html={node.h1}
      class="text-2xl sm:text-4xl md:text-6xl xl:text-8xl font-extrabold uppercase mb-4"
    />
    <div class="text-base md:text-lg xl:text-2xl font-normal mb-8">
      <PortableText value={node.p} />
    </div>
    <a class="btn" href={node.btn.href}>{node.btn.ancre}</a>
  </div>
  <div class="flex-0 w-full md:w-1/2">
    <Image src={node.img.src} alt={node.img.alt} />
  </div>
</section>
