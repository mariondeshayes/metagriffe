---
import Image from "./Image.astro";
import { PortableText } from "astro-portabletext";
const { node } = Astro.props;
---

<section class="my-32 mx-4">
  <hr class="small-separator mb-8" />
  <h2
    class="text-3xl sm:text-4xl md:text-6xl xl:text-7xl font-extrabold uppercase mb-16 bg-[var(--accent1Color)]"
    set:html={node.h2}
  />
  <div
    class="flex flex-col md:flex-row justify-center items-center gap-4 md:mr-0">
    <div class="flex-0 w-full md:w-2/5 frame">
      <Image
        src={node.img.src}
        alt={node.img.alt}
        class="h-[700px] object-cover"
      />
    </div>
    <div class="flex-0 w-full md:w-3/5 z-10">
      <h3
        class="text-xl sm:text-3xl md:text-4xl xl:text-6xl mb-4 font-extrabold"
        set:html={node.h3}
      />
      <div class="text-base md:text-lg xl:text-2xl font-normal mb-8">
        <PortableText value={node.text} />
      </div>
      <a class="btn" href={node.href}>{node.ancre}</a>
    </div>
  </div>
</section>
